{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noLib": false,
    "types": [
      "angular",
      "node",
      "angular-mocks",
      "jasmine"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
